<% if logged_in? %>
  <div class="row">
    <div class="col-lg-6 offset-lg-2">
      <h1>Welcome to Roommate Helper</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 offset-lg-2">
      <%= link_to "Go to My Profile", current_user %>
      </div>
  </div>
  <div class="row">
    <div class="col-lg-6 offset-lg-2">
      <img src="http://www.myfreephotoshop.com/wp-content/uploads/2015/01/1844.jpg" height="400" width="400"/>
    </div>
  </div>
  <% else %>
  <div class="row">
    <div class="col-lg-6 offset-lg-2">
      <h1>Welcome to Roommate Helper</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 offset-lg-2">
      <p><%= link_to "Login", login_path %> or <%= link_to "Sign Up", new_user_path %> to Begin!</p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 offset-lg-2">
      <img src="http://www.myfreephotoshop.com/wp-content/uploads/2015/01/1844.jpg" height="400" width="400"/>
    </div>
  </div>
